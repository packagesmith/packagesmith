{
  "name": "packagesmith",
  "version": "0.0.0-development",
  "description": "Provisioning/scaffolding tool for Rapid Development",
  "homepage": "http://packagesmith.github.io/packagesmith",
  "bugs": "http://github.com/packagesmith/packagesmith/issues",
  "license": "MIT",
  "author": "Keith Cirkel (http://keithcirkel.co.uk)",
  "files": [
    "lib/*.js"
  ],
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "src": "src"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/packagesmith/packagesmith.git"
  },
  "scripts": {
    "lint": "eslint src test --ignore-path .gitignore",
    "prepublish": "babel $npm_package_directories_src -d $npm_package_directories_lib",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "pretest": "npm run lint",
    "test": "mocha --recursive test/ --compilers js:babel-register",
    "watch": "npm run prepublish -- -w"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm test"
    }
  },
  "babel": {
    "compact": false,
    "ignore": "node_modules",
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "stage-2"
    ],
    "retainLines": true,
    "sourceMaps": "inline"
  },
  "eslintConfig": {
    "extends": "strict",
    "parser": "babel-eslint"
  },
  "dependencies": {
    "babel-runtime": "^6.5.0",
    "chalk": "^1.1.1",
    "child-process-promise": "^1.1.0",
    "debug": "^2.2.0",
    "diff": "^2.2.1",
    "fs-promise": "^0.4.1",
    "ini": "^1.3.4",
    "inquirer": "^0.12.0",
    "lodash.isfunction": "^3.0.8",
    "lodash.kebabcase": "^3.1.1",
    "lodash.partial": "^4.0.1",
    "lodash.pick": "^4.1.0",
    "lodash.pluck": "^3.1.2",
    "lodash.union": "^4.0.1",
    "lodash.uniq": "^4.2.0",
    "lodash.zipobject": "^4.1.1",
    "mkdirp-promise": "^1.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^4.1.8",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.5.2",
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "eslint": "^2.1.0",
    "eslint-config-strict": "^8.2.0",
    "eslint-plugin-filenames": "^0.2.0",
    "ghooks": "^1.0.3",
    "mocha": "^2.4.5",
    "semantic-release": "^4.3.5",
    "travis-after-all": "^1.4.4",
    "validate-commit-msg": "^2.0.0"
  }
}
